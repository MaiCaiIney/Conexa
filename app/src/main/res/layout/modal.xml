<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:duplicateParentState="true"
    android:orientation="vertical"
    android:padding="16dp"
    tools:type_info="true">

    <ImageView
        android:id="@+id/modal_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:duplicateParentState="true"
        android:src="@drawable/ic_message_type_selector"
        tools:src="@drawable/ic_message_type_info" />

    <TextView
        android:id="@+id/modal_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textAppearance="@style/Heading.L"
        tools:text="Título del modal" />

    <TextView
        android:id="@+id/modal_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textAppearance="@style/Body.M"
        tools:text="Mensaje.\nPuede contener varias líneas." />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/modal_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        tools:text="Botón" />

</LinearLayout>