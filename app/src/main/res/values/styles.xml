<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Conexa.TextAppearance">
        <item name="android:fontFamily">@font/muli</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingMultiplier">0</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Detail" parent="Theme.Conexa.TextAppearance">
        <item name="android:textSize">@dimen/font_size_2</item>
        <item name="android:lineSpacingExtra">16sp</item>
    </style>

    <style name="Body.S" parent="Theme.Conexa.TextAppearance">
        <item name="android:textSize">@dimen/font_size_3</item>
        <item name="android:lineSpacingExtra">20sp</item>
    </style>

    <style name="Body.M" parent="Theme.Conexa.TextAppearance">
        <item name="android:textSize">@dimen/font_size_4</item>
        <item name="android:lineSpacingExtra">22sp</item>
    </style>

    <style name="Action.Button.S" parent="Theme.Conexa.TextAppearance">
        <item name="android:textSize">@dimen/font_size_3</item>
        <item name="android:lineSpacingExtra">20sp</item>
    </style>

    <style name="Action.Button.M" parent="Theme.Conexa.TextAppearance">
        <item name="android:textSize">@dimen/font_size_4</item>
        <item name="android:lineSpacingExtra">22sp</item>
    </style>

    <style name="Action.Button.L" parent="Theme.Conexa.TextAppearance">
        <item name="android:textSize">@dimen/font_size_5</item>
        <item name="android:lineSpacingExtra">24sp</item>
    </style>

    <style name="Button" parent="Theme.Conexa.TextAppearance">
        <item name="android:textSize">@dimen/font_size_4</item>
        <item name="android:lineSpacingExtra">22sp</item>
    </style>

    <style name="Heading.S" parent="Theme.Conexa.TextAppearance">
        <item name="android:fontFamily">@font/muli_semibold</item>
        <item name="android:textSize">@dimen/font_size_3</item>
        <item name="android:lineSpacingExtra">20sp</item>
    </style>

    <style name="Heading.M" parent="Theme.Conexa.TextAppearance">
        <item name="android:fontFamily">@font/muli_semibold</item>
        <item name="android:textSize">@dimen/font_size_4</item>
        <item name="android:lineSpacingExtra">22sp</item>
    </style>

    <style name="Heading.L" parent="Theme.Conexa.TextAppearance">
        <item name="android:fontFamily">@font/muli_bold</item>
        <item name="android:textSize">@dimen/font_size_5</item>
        <item name="android:lineSpacingExtra">24sp</item>
    </style>

    <style name="Heading.XL" parent="Theme.Conexa.TextAppearance">
        <item name="android:fontFamily">@font/muli_bold</item>
        <item name="android:textSize">@dimen/font_size_6</item>
        <item name="android:lineSpacingExtra">28sp</item>
    </style>
</resources>