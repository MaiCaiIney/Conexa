<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Conexa" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/specific_background</item>
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorOnPrimary">@color/specific_background</item>
        <item name="colorSecondary">@color/light_blue</item>
        <item name="colorOnSecondary">@color/light_blue_40</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/specific_background</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="shapeAppearanceLargeComponent">@style/Theme.Conexa.BottomSheetDialog</item>
        <item name="android:buttonStyle">@style/Theme.Conexa.Button</item>
        <item name="android:actionMenuTextAppearance">@style/Button</item>
        <item name="android:actionMenuTextColor">@color/colorText</item>
    </style>

    <color name="colorText">@color/specific_content</color>
    <color name="colorBackground">@color/specific_background</color>
    <color name="colorBackgroundInverse">@color/specific_background_inverse</color>

    <style name="Theme.Conexa.Splash">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="Theme.Conexa.ShapeableImageView">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Theme.Conexa.BottomSheetDialog">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="Theme.Conexa.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textAppearance">@style/Button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">16dp</item>
    </style>

</resources>